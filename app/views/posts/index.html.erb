<% title "All Posts" %>
<% if user_signed_in? %>

	<div class="space">
		<h2>Blogs</h2>
		<p>Contains all the posts and their relevant information:</p>
	</div>

	<div class="col-md-6 space">
		<table class="table table-hover table-bordered" id="poststable">
		    <thead>
		      <tr>
		        <th>Title</th>
		        <th>Content</th>
		        <th>Category</th>
		        <th>Options</th>
		      </tr>
		    </thead>

		    <tbody>
					<%= render partial: 'post' , collection: @posts %>
		    </tbody>
		</table>
		<%= paginate @posts %>
	</div>

	<div class="col-md-6 space" id="addpost">
		<%= link_to "Add a new post", new_post_path, remote: true, class: 'btn btn-success nohover' %>
	</div>

<% end %>
