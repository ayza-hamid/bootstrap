<% if user_signed_in? %>
	<div class="space">
		<h2>All Posts</h2>
		<p>Contains all the posts and their relevant information:</p> 
	</div>
	  <div class="col-md-6 space">        
		  <table class="table table-dark table-striped">
		    <thead>
		      <tr>
		        <th colspan="2">Title</th>
		        <th colspan="3">Content</th>
		        <th colspan="5">Options</th>
		      </tr>
		    </thead>
		    
		    <tbody>
		    <% @posts.each do |post|%>  
		      <tr>
		        <td colspan="2"><%= link_to post.title, post %></td>
		        <td colspan="3"><%= post.content %></td>
		        <td colspan="5">
		        	<button class="btn btn-primary" style="color:white"><%= link_to "Edit", edit_post_path(post) %></button>
		        	<button class="btn btn-danger"><%= link_to "Delete Post", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %> </button>
		        	<button  class="btn btn-success"><%= link_to "Add a new post", new_post_path %></button>
		
		        </td>
		      </tr>
			<% end %>
		    </tbody>

		  </table>

	</div>
<% end %>
