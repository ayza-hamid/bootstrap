<% title "All Posts" %>
<% if user_signed_in? %>

	<div class="space">
		<h2>All Posts</h2>
		<p>Contains all the posts and their relevant information:</p> 
		<%= link_to "Add a new post", new_post_path, class: 'btn btn-success nohover' %>
	</div>
		        
	<div class="col-md-6 space">        
		<table class="table table-hover table-bordered">
		    <thead>
		      <tr>
		        <th>Title</th>
		        <th>Content</th>
		        <th>Topic</th>
		        <th>Options</th>
		      </tr>
		    </thead>
		    
		    <tbody>
			    <% @posts.each do |post|%>  
			      <tr>
			        <td><%= link_to post.title, post, class: 'cblack' %></td>
			        <td><%= post.content %></td>
			        <td><%= post.topic %></td>
			        <td>
			        	<%= link_to "Edit", edit_post_path(post), class: 'btn btn-primary nohover' %>
			        	<%= link_to "Delete Post", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger nohover' %>
		        	</td>
			      </tr>
				<% end %>
		    </tbody>
		</table>
		<%= paginate @posts %>
	</div>

<% end %>
