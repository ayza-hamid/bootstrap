<% title "Details" %>
<div class="space">
	<p>
		<b> Post Title: </b> <%= @post.title %>
	</p>
	<p>
		<b> Content: </b> <%= @post.content %>
	</p>
	<p>
		<b> Topic: </b> <%= @post.topic %>
	</p>
	<p>
		<b> Time of Creation: </b> <small> <%= @post.created_at %> </small>
	</p>
</div>
<div class="space">
	<%= link_to "Back", posts_path, class: 'btn btn-success' %>
</div>
